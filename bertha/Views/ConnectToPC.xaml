            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="64"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Height="48">
            <Button Grid.Row="1" Grid.Column="1" x:Name="BackButton" Margin="0,0,16,0"
                        Tapped="BackButton_Tapped"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Connect to your PC" Style="{StaticResource BerthaHeaderTextBlockStyle}" FontFamily="Global User Interface" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="1">
                <TextBlock x:Name="ConnectText" Text="Connecting the {0} directly to your computer will allow you to communicate directly with your board." Style="{StaticResource BerthaBodyTextBlockStyle}" FontFamily="Global User Interface" VerticalAlignment="Top"/>
                <Border Height="20">
                    <TextBlock Text="Once connected, you can use Visual Studio to write apps for Windows on your board." Style="{StaticResource BerthaBodyTextBlockStyle}" FontFamily="Global User Interface" VerticalAlignment="Bottom"/>
                </Border>
            </StackPanel>
        </Grid>

